---
import Layout from "../layouts/Layout.astro";
import "../styles/theme.css";
---

<Layout>
  <section class="error-404-container">
    <h1 class="error-404-title">404</h1>
    <p class="error-404-message">
      Oops, esta p√°gina se ha perdido en el universo.
    </p>
  </section>
</Layout>

<style>
  .error-404-container {
    text-align: center;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
  }

  .error-404-title {
    font-size: 10rem;
    font-weight: 900;
    letter-spacing: 0.2em;
    color: var(--color-text);
    animation: neon-flicker 2.5s infinite;
    text-shadow:
      0 0 3px var(--color-accent),
      0 0 6px var(--color-accent-hover);
  }

  .error-404-message {
    font-size: 1.5rem;
    color: var(--color-muted);
    margin-top: 1rem;
    animation: slideIn 1s ease forwards;
    opacity: 0;
  }

  @keyframes neon-flicker {
    0%,
    18%,
    22%,
    25%,
    53%,
    57%,
    100% {
      text-shadow:
        0 0 10px var(--color-text),
        0 0 20px var(--color-text);
    }
    20%,
    24%,
    55% {
      text-shadow: none;
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
